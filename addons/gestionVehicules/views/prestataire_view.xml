<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_prestataire_list" model="ir.ui.view">
            <field name="name">list: prestataires</field>
            <field name="model">prestataire</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                    <field name="prenom" />
                    <field name="cin" />
                    <field name="tel" />
                    <field name="dateNaiss" />
                    <field name="age" />
                    <field name="email" />
                </list>
            </field>
        </record>

        <record id="view_prestataire_form" model="ir.ui.view">
            <field name="name">Form prestataire</field>
            <field name="model">prestataire</field>
            <field name="arch" type="xml">
<form string="prestataires" style="width:100%;height:100%; background: #f5f5f5">
   <sheet>
     <h1 style="width:100% ;margin-top:10px; height:50px;text-align:center; background:#0066ee; color:#fff">Ajout Prestataire</h1>

  <group>
      <field name="name"   placeholder=""  style="width:300px;height:35px;margin-left:10px; font-size:14px"/>
      <field name="prenom"   placeholder=""  style="width:300px;height:35px;margin-left:10px; font-size:14px"/>
      <field name="cin" placeholder=""  style="width:300px;height:35px;margin-left:10px; font-size:14px"/>
      <field name="tel" placeholder=""  style="width:300px;height:35px;margin-left:10px; font-size:14px"/>
      <field name="email" placeholder=""  style="width:300px;height:35px;margin-left:10px; font-size:14px"/>    
      <field name="dateNaiss" string="Date de naissance" placeholder=""  style="width:300px;height:35px;margin-left:10px; font-size:14px"/>
      <field name="age" placeholder=""  style="width:300px;height:35px;margin-left:10px; font-size:14px"/>

  </group>

  <group style="position:absolute; left:60%;width:40%">
             <field name="photo" widget="image"   style="width:300px;height:100px !important;margin-left:10px; font-size:14px"/>

        </group>                          
                            
  

</sheet>
</form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="prestataire_action_window">
            <field name="name">prestataires</field>
            <field name="res_model">prestataire</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Top menu item -->
        <menuitem name="Customized Project" id="Mini_Projet_Menu_Root" sequence="7" />

        <!-- menu categories -->
        <menuitem name="Prestataires" id="parc_prestataire_menu" parent="Mini_Projet_Menu_Root" action="prestataire_action_window" />

    </data>
</odoo>