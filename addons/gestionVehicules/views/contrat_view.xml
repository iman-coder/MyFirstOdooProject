<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_contrat_list" model="ir.ui.view">
            <field name="name">list: contrats</field>
            <field name="model">contrat</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" placeholder=""/>
      <field name="date_start" placeholder=""   />
      <field name="date_end" placeholder=""   />
      <field name="type" placeholder=""   />
      <field name="wage" placeholder=""   />
      <field name="prestataire" placeholder=""   />
      <field name="prenomPrestataire"  placeholder=""   />
      <field name="cinPrestataire"  placeholder=""   />
     <field name="resource_calendar_id" placeholder=""   />
                </list>
            </field>
        </record>

        <record id="view_contrat_form" model="ir.ui.view">
            <field name="name">Form contrat</field>
            <field name="model">contrat</field>
            <field name="arch" type="xml">
                <form string="Current Contract">
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box"/>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active =='True'"/>
                        <div class="oe_title pr-0" name="title">
                            <h1 class="d-flex flex-row justify-content-between">
                                <field name="name" style="color: #0066ee" class="text-truncate" placeholder="Contract Reference"/>
                                <field name="kanban_state" widget="state_selection"/>
                            </h1>
                            <h2>
                                <field name="company_id" groups="base.group_multi_company" invisible="1"/>
                            </h2>
                        </div>
                        <group name="top_info">
                            <group name="top_info_left">
                            <h2 style="color: #0066ee; text-decoration:underline">Infos contrat :</h2>
                                <field name="active" invisible="1"/>
                                <field name="date_start" string="Date dÃ©but contrat"/>
                                <field name="date_end" string="Date fin contrat"/>
                                <field name="type" string="Type"/>
                                <field name="nbrJoursRest"/>    
                                <field name="wage" string="Salaire Mensuel"/>
                                <field name="company_country_id" invisible="1"/>
                                <field name="country_code" invisible="1"/>
                                <field name="structure_type_id" domain="['|', ('country_id', '=', False), ('country_id', '=', company_country_id)]"/>
                                <field name="calendar_mismatch" invisible="1"/>
                                <label for="resource_calendar_id"/>
                                <div>
                                    <field name="resource_calendar_id" required="1" nolabel="1"/>
                                    <span invisible="calendar_mismatch == 'False'" required="state != 'open'" class="fa fa-exclamation-triangle text-danger o_calendar_warning pl-3">
                                    </span>
                                    <span class="o_calendar_warning_tooltip text-danger">
                                        Calendar Mismatch : The employee's calendar does not match this contract's calendar. This could lead to unexpected behaviors.
                                    </span>
                                </div>
                            </group>
                            <group name="top_info_right" style="position:absolute; left:60%;width:55%">
                                <h2 style="color: #0066ee; text-decoration:underline">Infos prestataire :</h2>
      <field name="prestataire" string="nom"  placeholder=""  style="width:300px;height:35px;margin-left:10px; font-size:14px"/>
      <field name="prenomPrestataire" placeholder=""  style="width:300px;height:35px;margin-left:10px; font-size:14px"/>
      <field name="cinPrestataire" placeholder=""  style="width:300px;height:35px;margin-left:10px; font-size:14px"/>
      <!-- <field name="photoPrestataire" widget="image" placeholder=""  style="width:300px;height:35px;margin-left:10px; font-size:14px"/> -->

      
                            </group>
                        </group>
                        <notebook>
                            <page string="Clauses du Contrat" name="other">
                                <group><group name="contract_details"/></group>
                                <group name="notes_group" string="Notes">
                                    <field name="notes" string="Clauses" nolabel="1"/>
                                </group>
                            </page>
                            <page string="Prime et remboursement" name="information">
                                <group name="salary_info">
                                    <group name="salary">
                                        <label for="prime"/>
                                        <div class="o_row" name="wage">
                                            <field name="prime" nolabel="1"/>
                                            <span>/ month</span>
                                        </div>
                                    </group>
                                    <group name="yearly_advantages"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            


            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="contrat_action_window">
            <field name="name">contrats</field>
            <field name="res_model">contrat</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Top menu item -->
        <menuitem name="Customized Project" id="Mini_Projet_Menu_Root" sequence="7" />

        <!-- menu categories -->
        <menuitem name="Contrats" id="parc_entrepot_menu" parent="Mini_Projet_Menu_Root" action="contrat_action_window" />

        <!-- actions -->
        <!-- <menuitem name="Liste des missions" id="parc_mission_list" parent="parc_mission_menu"
            action="mission_action_window" /> -->
    </data>
</odoo>


